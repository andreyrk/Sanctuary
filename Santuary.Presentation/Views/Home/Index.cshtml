@{
    ViewData["Title"] = "Início";
}

<div class="flex flex-col py-8 px-4 sm:px-2">
    <div class="w-full max-w-screen-md mx-auto mb-8">
        <div class="mb-2">
            <span class="text-xl font-bold">Dia a dia</span>
        </div>
        <v-card class="flex flex-col">
            <div v-ripple class="p-2">Calendário</div>
            <v-divider></v-divider>
            <div v-ripple class="p-2">Pendências</div>
        </v-card>
    </div>
    <div class="w-full max-w-screen-md mx-auto mb-8">
        <div class="mb-2">
            <span class="text-xl font-bold">Cadastros</span>
        </div>
        <v-card class="flex flex-col">
            <a href="/Animals"><div v-ripple class="p-2 text--black">Animais</div></a>
            <v-divider></v-divider>
            <a href="/Volunteers"><div v-ripple class="p-2 text--black">Espécies</div></a>
            <v-divider></v-divider>
            <a href="/Volunteers"><div v-ripple class="p-2 text--black">Voluntários</div></a>
        </v-card>
    </div>
</div>

@section Script {
    <script src="~/Home/Authenticated.js" asp-append-version="true"></script>
}

@section Style {
    <style>
        a, a:hover, a:visited, a:active, a:link {
          color: inherit;
          text-decoration: none;
         }
    </style>
}
